CREATE TABLE wine.blog_post (
    id SERIAL PRIMARY KEY,
    blog_card_id INTEGER REFERENCES wine.blog_card(id) ON DELETE CASCADE,
    main_title VARCHAR(200) NOT NULL,
    main_content TEXT NOT NULL,
    main_image_url VARCHAR(255) NOT NULL,
    subtitle_1 VARCHAR(200) NOT NULL,
    content_1 TEXT NOT NULL,
    subtitle_2 VARCHAR(200),
    content_2 TEXT,
    subtitle_3 VARCHAR(200),
    content_3 TEXT
    );

