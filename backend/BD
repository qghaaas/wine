create table wine.blog_card (
    id SERIAL PRIMARY KEY,
    title VARCHAR(100) NOT NULL,
    subtitle VARCHAR(100) NOT NULL,
    call_to_action VARCHAR(50) NOT NULL,
    image_url VARCHAR(255) NOT NULL
);

